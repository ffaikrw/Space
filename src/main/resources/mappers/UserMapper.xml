<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ffaikrw.space.user.dao.UserDAO">

	<insert id="insertUser" parameterType="map">
	
		insert into `user`
		(
			`nickname`
			, `email`
			, `password`
			, `profileImage`
			, `createdAt`
			, `updatedAt`
		)
		value
		(
			#{nickname}
			, #{email}
			, #{password}
			, null
			, now()
			, now()
		)
	
	</insert>
	
	
	<select id="selectNicknameCount" parameterType="String" resultType="int">
	
		select
			count(*)
		from
			`user`
		where
			`nickname` = #{nickname}
	
	</select>
	
	
	<select id="selectEmailCount" parameterType="String" resultType="int">
	
		select
			count(*)
		from
			`user`
		where
			`email` = #{email}
	
	</select>
	
	
	<select id="selectUser" parameterType="map" resultType="com.ffaikrw.space.user.model.User">
	
		select
			`id`
			, `nickname`
			, `email`
			, `password`
			, `profileImage`
			, `createdAt`
			, `updatedAt`
		from
			`user`
		where
			`email` = #{email}
			and `password` = #{password}
	
	</select>

</mapper>